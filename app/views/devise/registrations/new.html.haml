.Form
  = render partial: 'lessons/header'
  .FormBox
    %h2 新規会員登録
    = form_for(@user, url: user_registration_path) do |f|
      = render "devise/shared/error_messages", resource: @user
      .FormBox__content
        = f.label :name, "氏名", class: 'FormBox__label'
        %span.rq 必須
        %br/
        = f.text_field :name, autofocus: true, placeholder: "山田花子", class: 'FormBox__field'
      .FormBox__content
        = f.label :email, "メールアドレス", class: 'FormBox__label'
        %span.rq 必須
        %br/
        = f.email_field :email, autofocus: true, placeholder: "info@metta.com", class: 'FormBox__field'
      - if @sns_id.present?
        = hidden_field_tag :sns_auth, true
      - else
        .FormBox__content
          = f.label :password, "パスワード", class: 'FormBox__label'
          %span.rq 必須
          %br/
          = f.password_field :password, placeholder: "#{@minimum_password_length}文字以上の半角英数字", class: 'FormBox__field'
        .FormBox__content
          = f.label :password_confirmation, "パスワード確認", class: 'FormBox__label'
          %span.rq 必須
          %br/
          = f.password_field :password_confirmation, placeholder: "再度入力ください", class: 'FormBox__field'
      .FormBox__actions
        = f.submit "Next", class: 'FormBox__btn'
  = render partial: 'lessons/footer'
