.Form
  = render partial: 'lessons/header'
  .FormBox
    %h2 個人情報登録
    = form_for @profile do |f|
      = render "devise/shared/error_messages", resource: @profile
      .FormBox__content
        = f.label :phone_num, "電話番号", class: 'FormBox__label'
        %span.rq 必須
        %br/
        = f.phone_field :phone_num, autofocus: true, placeholder: "09011111111 (ハイフンなし)", class: 'FormBox__field'
      .FormBox__content
        = f.label :zipcode, "郵便番号", class: 'FormBox__label'
        %span.rq 必須
        %br/
        = f.text_field :zipcode, autofocus: true, placeholder: "1112222 (ハイフンなし)", class: 'FormBox__field'
      .FormBox__content
        = f.label :date_of_birth, "生年月日", class: 'FormBox__label'
        %span.rq 必須
        %br/
        = f.date_select :date_of_birth, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 5), default: Date.new(1990, 1, 1), class: 'FormBox__field'
      .FormBox__actions
        = f.submit "登録", class: 'FormBox__btn'
  = render partial: 'lessons/footer'
  